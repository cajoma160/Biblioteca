<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceMedium"
android:text="Id_cliente"
android:id="@+id/textView" />



    <EditText
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/et_dni" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceMedium"
android:text="Nombre del Solicitante"
android:id="@+id/textView2" />

<EditText
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/et_nombre" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceMedium"
android:text="Numero de Tel"
android:id="@+id/textView3" />

<EditText
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/et_numero" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceMedium"
android:text="Nombre del Libro"
android:id="@+id/textView4" />

<EditText
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/et_libro" />


<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceMedium"
android:text="Fecha de Salida"
android:id="@+id/textView5" />

<EditText
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/et_fecha" />



<LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Guardar"
    android:id="@+id/btn_alta"
    android:onClick="alta"
    android:layout_weight="1" />

<Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Buscar"
    android:id="@+id/btn_consultar"
    android:onClick="consulta"
    android:layout_weight="1" />


<Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Eliminar"
    android:id="@+id/btn_baja"
    android:onClick="baja"
    android:layout_weight="1" />

<Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Modi"
    android:id="@+id/btn_modificar"
    android:onClick="modificacion"
    android:layout_weight="1" />

</LinearLayout>





    </LinearLayout>
